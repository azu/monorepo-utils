{
  "name": "@monorepo-utils/collect-changelog",
  "version": "2.4.4",
  "description": "Collect CHANGELOG from tags.",
  "keywords": [
    "changelog",
    "lerna",
    "monorepo"
  ],
  "homepage": "https://github.com/azu/monorepo-utils",
  "bugs": {
    "url": "https://github.com/azu/monorepo-utils/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/",
    "template/"
  ],
  "main": "lib/collect-changelog-from-tag.js",
  "types": "lib/collect-changelog-from-tag.d.ts",
  "bin": {
    "monorepo-utils-collect-changelog": "./bin/cmd.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/monorepo-utils.git"
  },
  "scripts": {
    "clean": "rimraf lib && tsc -b --clean",
    "build": "tsc -b .",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "prepublish": "npm run --if-present build",
    "test": "jest --no-cache",
    "test:updateSnapshot": "jest -u",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'",
    "watch": "tsc -b . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "./test/.*.ts$",
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "@monorepo-utils/package-utils": "^2.4.4",
    "cclog-parser": "^1.1.1",
    "changelog-parser": "^2.6.0",
    "handlebars": "^4.0.12",
    "meow": "^7.1.1",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^26.0.10",
    "@types/load-json-file": "^5.1.0",
    "@types/node": "^14.6.2",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.4.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
