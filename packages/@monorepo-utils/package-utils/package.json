{
  "name": "@monorepo-utils/package-utils",
  "version": "2.9.0",
  "description": "Package utility for monorepo.",
  "keywords": [
    "lerna",
    "monorepo",
    "util"
  ],
  "homepage": "https://github.com/azu/monorepo-utils/tree/master/packages/@monorepo-utils/package-utils/",
  "bugs": {
    "url": "https://github.com/azu/monorepo-utils/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/monorepo-utils.git"
  },
  "scripts": {
    "build": "tsc -b .",
    "clean": "rimraf lib/ && tsc -b --clean",
    "prepublish": "npm run --if-present build",
    "test": "jest --no-cache",
    "test:updateSnapshot": "jest -u",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "watch": "tsc -b . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "./test/.*.ts$",
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ]
  },
  "dependencies": {
    "globby": "^11.0.1",
    "load-json-file": "^6.2.0",
    "upath": "^2.0.1",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/load-json-file": "^5.1.0",
    "@types/node": "^14.6.2",
    "cross-env": "^7.0.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.4.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
