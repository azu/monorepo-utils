{
  "name": "@monorepo-utils/package-utils",
  "version": "2.0.1",
  "description": "Package utility for monorepo.",
  "keywords": [
    "lerna",
    "monorepo",
    "util"
  ],
  "homepage": "https://github.com/azu/monorepo-utils/tree/master/packages/@monorepo-utils/package-utils/",
  "bugs": {
    "url": "https://github.com/azu/monorepo-utils/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/monorepo-utils.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "clean": "rimraf lib/",
    "prepublish": "npm run --if-present build",
    "test": "jest --no-cache",
    "test:updateSnapshot": "jest -u",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "./test/.*.ts$",
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "globby": "^9.0.0",
    "load-json-file": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/load-json-file": "^2.0.7",
    "@types/node": "^10.12.18",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
