{
  "name": "@monorepo-utils/publish",
  "version": "2.0.2",
  "description": "Publish packages to npm if needed. ",
  "license": "MIT",
  "files": [
    "bin",
    "lib",
    "src"
  ],
  "main": "lib/publish.js",
  "types": "lib/publish.d.ts",
  "bin": {
    "monorepo-utils-publish": "./bin/cmd.js"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "prepublish": "npm run --if-present build",
    "test": "jest",
    "watch": "tsc -p . --watch"
  },
  "dependencies": {
    "@monorepo-utils/package-utils": "^2.0.2",
    "can-npm-publish": "^1.3.1",
    "chalk": "^2.4.2",
    "child-process-promise": "^2.2.1",
    "cli-spinners": "^1.1.0",
    "inquirer": "^6.2.1",
    "log-update": "^2.3.0",
    "meow": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "consolemock": "^1.1.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "strip-ansi": "^4.0.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "./test/.*.ts$",
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
